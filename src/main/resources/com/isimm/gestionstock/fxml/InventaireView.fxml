<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.isimm.gestionstock.controller.InventaireController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- En-tête -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label styleClass="page-title" text="Gestion des Inventaires" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="txtRecherche" promptText="Rechercher un inventaire..." />
                        <Button onAction="#handleNouvelInventaire" styleClass="btn-primary" text="Nouvel Inventaire" />
                    </children>
                </HBox>

                <!-- Formulaire de création d'inventaire -->
                <TitledPane collapsible="false" text="Créer un Inventaire">
                    <content>
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Nom de l'inventaire:" />
                                <TextField fx:id="txtNomInventaire" promptText="Nom de l'inventaire" GridPane.columnIndex="1" />
                                <Label text="Date:" GridPane.columnIndex="2" />
                                <DatePicker fx:id="dateInventaire" GridPane.columnIndex="3" />
                                <Label text="Local:" GridPane.rowIndex="1" />
                                <ComboBox fx:id="comboLocal" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Button onAction="#handleCreerInventaire" styleClass="btn-success" text="Créer Inventaire" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                <Button onAction="#handleValiderInventaire" styleClass="btn-primary" text="Valider Inventaire" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>

                <!-- Tableau des inventaires -->
                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-title" text="Liste des Inventaires" />
                        <TableView fx:id="tableInventaires" prefHeight="200.0">
                            <columns>
                                <TableColumn fx:id="colIdInventaire" prefWidth="75.0" text="ID" />
                                <TableColumn fx:id="colNomInventaire" prefWidth="200.0" text="Nom" />
                                <TableColumn fx:id="colDateInventaire" prefWidth="150.0" text="Date" />
                                <TableColumn fx:id="colStatutInventaire" prefWidth="100.0" text="Statut" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <!-- Section d'ajout d'articles -->
                <TitledPane collapsible="false" text="Ajouter des Articles à l'Inventaire">
                    <content>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Article:" />
                                <ComboBox fx:id="comboArticle" prefWidth="200.0" />
                                <Label text="Quantité réelle:" />
                                <TextField fx:id="txtQuantiteReelle" prefWidth="100.0" promptText="0" />
                                <Button onAction="#handleAjouterArticle" styleClass="btn-success" text="Ajouter Article" />
                                <Button onAction="#handleGenererRapport" styleClass="btn-info" text="Générer Rapport" />
                            </children>
                        </HBox>
                    </content>
                </TitledPane>

                <!-- Tableau des détails d'inventaire -->
                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-title" text="Détails de l'Inventaire Sélectionné" />
                        <TableView fx:id="tableDetails" prefHeight="200.0">
                            <columns>
                                <TableColumn fx:id="colArticleNom" prefWidth="200.0" text="Article" />
                                <TableColumn fx:id="colQuantiteTheorique" prefWidth="120.0" text="Qté Théorique" />
                                <TableColumn fx:id="colQuantiteReelle" prefWidth="120.0" text="Qté Réelle" />
                                <TableColumn fx:id="colEcart" prefWidth="100.0" text="Écart" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
