<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.isimm.gestionstock.controller.AlertesController">
    <children>
        <!-- Titre -->
        <Label layoutX="20.0" layoutY="20.0" styleClass="title-label" text="Gestion des Alertes" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />

        <!-- Zone de filtres -->
        <HBox layoutX="20.0" layoutY="60.0" spacing="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">
            <children>
                <Label text="Type:" />
                <ComboBox fx:id="cmbFiltreType" prefWidth="150.0" />

                <Label text="Gravité:" />
                <ComboBox fx:id="cmbFiltreGravite" prefWidth="120.0" />

                <Label text="Statut:" />
                <ComboBox fx:id="cmbFiltreStatut" prefWidth="120.0" />

                <Label text="Rechercher:" />
                <TextField fx:id="txtRecherche" prefWidth="200.0" promptText="Rechercher dans les messages..." />

                <Button fx:id="btnActualiser" onAction="#actualiserAlertes" styleClass="primary-button" text="Actualiser" />
            </children>
        </HBox>

        <!-- Tableau des alertes -->
        <TableView fx:id="tableAlertes" layoutX="20.0" layoutY="110.0" prefHeight="250.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="110.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colType" prefWidth="120.0" text="Type" />
                <TableColumn fx:id="colMessage" prefWidth="300.0" text="Message" />
                <TableColumn fx:id="colNiveauGravite" prefWidth="100.0" text="Gravité" />
                <TableColumn fx:id="colDateCreation" prefWidth="150.0" text="Date création" />
                <TableColumn fx:id="colStatut" prefWidth="100.0" text="Statut" />
            </columns>
        </TableView>

        <!-- Zone de détails et actions -->
        <HBox layoutX="20.0" layoutY="380.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="380.0">
            <children>
                <!-- Détails de l'alerte -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-label" text="Détails de l'alerte sélectionnée" />
                        <TextArea fx:id="txtDetailsAlerte" editable="false" prefHeight="150.0" wrapText="true" />
                    </children>
                </VBox>

                <!-- Boutons d'action -->
                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="section-label" text="Actions" />
                        <Button fx:id="btnMarquerLue" onAction="#marquerCommeLue" prefWidth="120.0" styleClass="secondary-button" text="Marquer lue" />
                        <Button fx:id="btnMarquerResolue" onAction="#marquerCommeResolue" prefWidth="120.0" styleClass="success-button" text="Marquer résolue" />
                        <Button fx:id="btnSupprimer" onAction="#supprimerAlerte" prefWidth="120.0" styleClass="danger-button" text="Supprimer" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
