<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.isimm.gestionstock.controller.ArticlesController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestion des Articles" />

                <HBox spacing="10.0">
                    <children>
                        <Label text="Recherche:" />
                        <TextField fx:id="rechercheField" promptText="Rechercher par nom, référence ou description..." HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <TableView fx:id="articlesTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="referenceColumn" prefWidth="100.0" text="Référence" />
                        <TableColumn fx:id="nomColumn" prefWidth="200.0" text="Nom" />
                        <TableColumn fx:id="descriptionColumn" prefWidth="250.0" text="Description" />
                        <TableColumn fx:id="stockMinimalColumn" prefWidth="80.0" text="Stock Min" />
                        <TableColumn fx:id="stockActuelColumn" prefWidth="80.0" text="Stock Actuel" />
                        <TableColumn fx:id="prixColumn" prefWidth="100.0" text="Prix Unitaire" />
                        <TableColumn fx:id="critiqueColumn" prefWidth="80.0" text="Critique" />
                    </columns>
                </TableView>

                <Separator />

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                    <children>
                        <Label text="Référence:" />
                        <TextField fx:id="referenceField" GridPane.columnIndex="1" />
                        <Label text="Nom:" GridPane.columnIndex="2" />
                        <TextField fx:id="nomField" GridPane.columnIndex="3" />

                        <Label text="Type Produit:" GridPane.rowIndex="1" />
                        <ComboBox fx:id="typeProduitCombo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Stock Minimal:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="stockMinimalField" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label text="Stock Actuel:" GridPane.rowIndex="2" />
                        <TextField fx:id="stockActuelField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Prix Unitaire:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="prixField" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                        <Label text="Description:" GridPane.rowIndex="3" />
                        <TextArea fx:id="descriptionArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />

                        <CheckBox fx:id="critiqueCheckBox" text="Article critique" GridPane.rowIndex="4" />
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="ajouterButton" onAction="#handleAjouter" text="Ajouter" />
                        <Button fx:id="modifierButton" onAction="#handleModifier" text="Modifier" />
                        <Button fx:id="supprimerButton" onAction="#handleSupprimer" text="Supprimer" />
                        <Button fx:id="viderButton" onAction="#handleVider" text="Vider" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
