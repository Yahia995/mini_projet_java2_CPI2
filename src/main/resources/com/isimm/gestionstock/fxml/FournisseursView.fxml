<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.isimm.gestionstock.controller.FournisseursController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestion des Fournisseurs" />

                <HBox spacing="10.0">
                    <children>
                        <Label text="Recherche:" />
                        <TextField fx:id="rechercheField" promptText="Rechercher par nom, email ou contact..." HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <TableView fx:id="fournisseursTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nomColumn" prefWidth="150.0" text="Nom" />
                        <TableColumn fx:id="adresseColumn" prefWidth="200.0" text="Adresse" />
                        <TableColumn fx:id="telephoneColumn" prefWidth="120.0" text="Téléphone" />
                        <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
                        <TableColumn fx:id="contactColumn" prefWidth="150.0" text="Contact" />
                    </columns>
                </TableView>

                <Separator />

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                    <children>
                        <Label text="Nom:" />
                        <TextField fx:id="nomField" GridPane.columnIndex="1" />
                        <Label text="Téléphone:" GridPane.columnIndex="2" />
                        <TextField fx:id="telephoneField" GridPane.columnIndex="3" />

                        <Label text="Email:" GridPane.rowIndex="1" />
                        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Contact:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="contactPersonneField" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label text="Adresse:" GridPane.rowIndex="2" />
                        <TextArea fx:id="adresseArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2" />
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="ajouterButton" onAction="#handleAjouter" text="Ajouter" />
                        <Button fx:id="modifierButton" onAction="#handleModifier" text="Modifier" />
                        <Button fx:id="supprimerButton" onAction="#handleSupprimer" text="Supprimer" />
                        <Button fx:id="viderButton" onAction="#handleVider" text="Vider" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
