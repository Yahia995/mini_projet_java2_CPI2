<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.isimm.gestionstock.controller.DashboardController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Tableau de Bord - Gestion de Stock ISIMM" />

                <GridPane hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                    <children>
                        <VBox spacing="10.0" style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 5;">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Articles en Stock" />
                                <!-- Added fx:id for dynamic data binding -->
                                <Label fx:id="totalArticlesLabel" style="-fx-font-size: 24px; -fx-text-fill: #1976d2;" text="0" />
                                <Label text="Total des articles" />
                            </children>
                        </VBox>

                        <VBox spacing="10.0" style="-fx-background-color: #fff3e0; -fx-padding: 15; -fx-background-radius: 5;" GridPane.columnIndex="1">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Alertes Stock" />
                                <!-- Added fx:id for dynamic data binding -->
                                <Label fx:id="alertesStockLabel" style="-fx-font-size: 24px; -fx-text-fill: #f57c00;" text="0" />
                                <Label text="Articles en rupture" />
                            </children>
                        </VBox>

                        <VBox spacing="10.0" style="-fx-background-color: #ffebee; -fx-padding: 15; -fx-background-radius: 5;" GridPane.columnIndex="2">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Articles Critiques" />
                                <!-- Added fx:id for dynamic data binding -->
                                <Label fx:id="articlesCritiquesLabel" style="-fx-font-size: 24px; -fx-text-fill: #d32f2f;" text="0" />
                                <Label text="Nécessitent attention" />
                            </children>
                        </VBox>

                        <VBox spacing="10.0" style="-fx-background-color: #e8f5e8; -fx-padding: 15; -fx-background-radius: 5;" GridPane.rowIndex="1">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Fournisseurs Actifs" />
                                <!-- Added fx:id for dynamic data binding -->
                                <Label fx:id="totalFournisseursLabel" style="-fx-font-size: 24px; -fx-text-fill: #388e3c;" text="0" />
                                <Label text="Partenaires" />
                            </children>
                        </VBox>

                        <VBox spacing="10.0" style="-fx-background-color: #f3e5f5; -fx-padding: 15; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Locaux" />
                                <!-- Added fx:id for dynamic data binding -->
                                <Label fx:id="totalLocauxLabel" style="-fx-font-size: 24px; -fx-text-fill: #7b1fa2;" text="0" />
                                <Label text="Espaces de stockage" />
                            </children>
                        </VBox>

                        <VBox spacing="10.0" style="-fx-background-color: #fce4ec; -fx-padding: 15; -fx-background-radius: 5;" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Services" />
                                <!-- Added fx:id for dynamic data binding -->
                                <Label fx:id="totalServicesLabel" style="-fx-font-size: 24px; -fx-text-fill: #c2185b;" text="0" />
                                <Label text="Services consommateurs" />
                            </children>
                        </VBox>
                    </children>
                </GridPane>

                <Separator />

                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Alertes Stock - Articles à Surveiller" />

                <TableView fx:id="alertesTable" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="alerteReferenceColumn" prefWidth="100.0" text="Référence" />
                        <TableColumn fx:id="alerteNomColumn" prefWidth="200.0" text="Nom" />
                        <TableColumn fx:id="alerteStockMinColumn" prefWidth="100.0" text="Stock Min" />
                        <TableColumn fx:id="alerteStockActColumn" prefWidth="100.0" text="Stock Actuel" />
                        <TableColumn fx:id="alerteStatutColumn" prefWidth="100.0" text="Statut" />
                    </columns>
                </TableView>

                <Separator />

                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Actions Rapides" />

                <HBox spacing="15.0">
                    <children>
                        <Button prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="Nouvel Article" />
                        <Button prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Nouvelle Commande" />
                        <Button prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #ff9800; -fx-text-fill: white;" text="Voir Alertes" />
                        <Button prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #9c27b0; -fx-text-fill: white;" text="Inventaire" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
