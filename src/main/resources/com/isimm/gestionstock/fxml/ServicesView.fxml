<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.isimm.gestionstock.controller.ServicesController">

    <VBox spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="220.0" AnchorPane.topAnchor="0.0">
        <children>
            <Label styleClass="title" text="Gestion des Services" />
            <TextField fx:id="searchField" promptText="Rechercher un service..." />
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>

    <TableView fx:id="servicesTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="220.0" AnchorPane.topAnchor="80.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nomColumn" prefWidth="150.0" text="Nom" />
            <TableColumn fx:id="budgetAnnuelColumn" prefWidth="120.0" text="Budget Annuel" />
            <TableColumn fx:id="responsableColumn" prefWidth="150.0" text="Responsable" />
            <TableColumn fx:id="telephoneColumn" prefWidth="120.0" text="Téléphone" />
            <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
        </columns>
    </TableView>

    <VBox spacing="10.0" styleClass="form-panel" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" prefWidth="210.0">
        <children>
            <Label styleClass="form-title" text="Détails du Service" />
            <Label text="Nom:" />
            <TextField fx:id="nomField" />
            <Label text="Budget Annuel:" />
            <TextField fx:id="budgetAnnuelField" promptText="0.00" />
            <Label text="Responsable:" />
            <TextField fx:id="responsableField" />
            <Label text="Téléphone:" />
            <TextField fx:id="telephoneField" />
            <Label text="Email:" />
            <TextField fx:id="emailField" />
            <HBox spacing="5.0">
                <children>
                    <Button fx:id="addButton" onAction="#handleAdd" styleClass="btn-primary" text="Ajouter" />
                    <Button fx:id="updateButton" disable="true" onAction="#handleUpdate" styleClass="btn-secondary" text="Modifier" />
                </children>
            </HBox>
            <HBox spacing="5.0">
                <children>
                    <Button fx:id="deleteButton" disable="true" onAction="#handleDelete" styleClass="btn-danger" text="Supprimer" />
                    <Button fx:id="clearButton" onAction="#handleClear" text="Effacer" />
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
</AnchorPane>
